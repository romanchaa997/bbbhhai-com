# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env file to version control

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000
API_BASE_URL=http://localhost:3000/api

# ==========================================
# DATABASE
# ==========================================
DATABASE_URL=postgresql://user:password@localhost:5432/audityzer
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password
DB_NAME=audityzer

# ==========================================
# GMAIL INTEGRATION
# ==========================================
GMAIL_ENABLED=false
GMAIL_API_KEY=your_gmail_api_key
GMAIL_CLIENT_ID=your_client_id
GMAIL_CLIENT_SECRET=your_client_secret
GMAIL_REFRESH_TOKEN=your_refresh_token

# ==========================================
# GITHUB INTEGRATION
# ==========================================
GITHUB_ENABLED=false
GITHUB_TOKEN=your_github_token
GITHUB_ORG=your_org_name
GITHUB_WEBHOOK_SECRET=your_webhook_secret

# ==========================================
# SLACK INTEGRATION
# ==========================================
SLACK_ENABLED=false
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your_signing_secret
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_APP_ID=your_app_id

# ==========================================
# GOOGLE CALENDAR INTEGRATION
# ==========================================
CALENDAR_ENABLED=false
CALENDAR_API_KEY=your_calendar_api_key
CALENDAR_CLIENT_ID=your_calendar_client_id
CALENDAR_CLIENT_SECRET=your_calendar_client_secret
CALENDAR_REFRESH_TOKEN=your_calendar_refresh_token

# ==========================================
# ZAPIER INTEGRATION
# ==========================================
ZAPIER_ENABLED=false
ZAPIER_API_KEY=your_zapier_api_key
ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/YOUR/WEBHOOK/

# ==========================================
# TELEGRAM BOT INTEGRATION
# ==========================================
TELEGRAM_ENABLED=true
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/telegram/webhook
TELEGRAM_CHAT_ID=your_chat_id

# ==========================================
# MONOBANK INTEGRATION
# ==========================================
MONOBANK_ENABLED=false
MONOBANK_API_TOKEN=your_monobank_api_token
MONOBANK_ACCOUNT_ID=your_account_id
MONOBANK_WEBHOOK_URL=https://your-domain.com/api/monobank/webhook

# ==========================================
# SECURITY
# ==========================================
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your_refresh_token_secret
REFRESH_TOKEN_EXPIRES_IN=30d

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/app.log

# ==========================================
# REDIS (for caching & sessions)
# ==========================================
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ==========================================
# DEPLOYMENT
# ==========================================
DEPLOYMENT_ENV=development
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ACCOUNT_ID=your_account_id
CLOUDFLARE_ZONE_ID=your_zone_id

# ==========================================
# MONITORING & ANALYTICS
# ==========================================
SENTRY_DSN=https://your_sentry_dsn
SENTRY_ENABLED=false
DATA DOG_API_KEY=your_datadog_api_key
NEW_RELIC_KEY=your_new_relic_key
